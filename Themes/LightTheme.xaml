<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="FlavorHub.NewFolder.LightTheme"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Color x:Key="PageBackgroundColor">white</Color>
    <!--  Light background color  -->
    <Color x:Key="LightPrimaryColor">#3FB4B1</Color>
    <!--  Main color  -->
    <Color x:Key="LightSecondaryColor">#D5EEEE</Color>
    <!--  Accent color  -->
    <Color x:Key="LightPrimaryTextColor">Black</Color>
    <!--  Main text color  -->
    <Color x:Key="LightSecondaryTextColor">Gray</Color>
</ResourceDictionary>