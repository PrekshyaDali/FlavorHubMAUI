<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlavorHub.Views.Profile.EditProfile"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EditProfile">
    <VerticalStackLayout Padding="20" Spacing="20">
        <VerticalStackLayout Margin="0,0,0,20">
            <Grid
                ColumnDefinitions="*"
                HeightRequest="100"
                RowDefinitions="*,.1*"
                WidthRequest="100">
                <Border
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.Column="0"
                    HeightRequest="100"
                    HorizontalOptions="Center"
                    StrokeShape="RoundRectangle 80"
                    WidthRequest="100">
                    <Image
                        Grid.Row="1"
                        Grid.Column="0"
                        HeightRequest="20"
                        HorizontalOptions="End"
                        Source="dotnet_bot.png"
                        WidthRequest="10" />
                </Border>
            </Grid>
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="gekki" />
                <Label Text="prekshya@gmail.com" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
