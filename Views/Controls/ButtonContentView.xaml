<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="FlavorHub.Views.Controls.ButtonContentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this">
    <VerticalStackLayout>
        <Button
            BackgroundColor="{DynamicResource PrimaryColor}"
            Command="{Binding Source={x:Reference this}, Path=ButtonCommand}"
            HorizontalOptions="FillAndExpand"
            Text="{Binding Source={x:Reference this}, Path=ButtonText}"
            TextColor="{Binding Source={x:Reference this}, Path=ButtonTextColor}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentView>
