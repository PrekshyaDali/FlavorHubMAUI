<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlavorHub.Views.Gallery"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Galleries">
    <StackLayout Padding="10">
        <!--  Search Bar  -->
        <SearchBar
            Placeholder="Search for photos"
            SearchCommand="{Binding SearchFoodCommand}"
            Text="{Binding SearchQuery}" />

        <!--  Refresh Button  -->
        <Button Command="{Binding RefreshFoodCommand}" Text="Refresh" />
        <!--  RefreshView to enable pull-to-refresh  -->
        <RefreshView Command="{Binding RefreshFoodCommand}" IsRefreshing="{Binding IsRefreshing}">

            <!--  CollectionView to display photos  -->
            <CollectionView ItemsSource="{Binding Photos}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Height="150" ImageSource="{Binding Url}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </StackLayout>
</ContentPage>
