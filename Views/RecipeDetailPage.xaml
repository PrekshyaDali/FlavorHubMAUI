<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlavorHub.Views.RecipeDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:FlavorHub.Views.Controls">
    <Shell.TitleView>
        <Grid
            Padding="20,5,20,0"
            ColumnSpacing="10"
            HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                BackgroundColor="{DynamicResource SecondaryColor}"
                HeightRequest="50"
                HorizontalOptions="End"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0"
                WidthRequest="60">
                <Label
                    HorizontalOptions="Center"
                    Text="3/5"
                    VerticalOptions="Center" />
            </Border>
            <Border
                Grid.Column="1"
                BackgroundColor="{DynamicResource SecondaryColor}"
                HeightRequest="50"
                HorizontalOptions="End"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0"
                WidthRequest="60">
                <Label
                    HorizontalOptions="Center"
                    Text="3/5"
                    VerticalOptions="Center" />
            </Border>
        </Grid>
    </Shell.TitleView>
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!--  //uppersection  -->
            <FlexLayout JustifyContent="SpaceBetween">
                <HorizontalStackLayout
                    HorizontalOptions="Center"
                    Spacing="10"
                    VerticalOptions="Center">
                    <Border
                        HeightRequest="50"
                        StrokeShape="RoundRectangle 40 "
                        WidthRequest="50">
                        <Image Source="/TabBarIcons/profile.png" />
                    </Border>
                    <Label
                        FontAttributes="Bold"
                        Text="Amelia Melanes"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
                <Border
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    HeightRequest="50"
                    StrokeShape="RoundRectangle 20"
                    StrokeThickness="0"
                    WidthRequest="80">
                    <Label
                        HorizontalOptions="Center"
                        Text="4.5"
                        VerticalOptions="Center" />
                </Border>
            </FlexLayout>

            <!--  //picture  -->
            <ScrollView Grid.Row="2" Orientation="Horizontal">
                <HorizontalStackLayout Spacing="10">
                    <Image
                        HeightRequest="300"
                        HorizontalOptions="FillAndExpand"
                        Source="food.png" />

                    <Image
                        HeightRequest="300"
                        HorizontalOptions="FillAndExpand"
                        Source="food.png" />

                    <Image
                        HeightRequest="300"
                        HorizontalOptions="FillAndExpand"
                        Source="food.png" />

                </HorizontalStackLayout>
            </ScrollView>
            <FlexLayout JustifyContent="SpaceBetween">
                <Label Style="{StaticResource SubHeader}" Text="Ingredients" />
                <Border
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    HeightRequest="40"
                    StrokeShape="RoundRectangle 15"
                    StrokeThickness="0"
                    WidthRequest="100">
                    <Label
                        HorizontalOptions="Center"
                        Text="4 serving"
                        VerticalOptions="Center" />
                </Border>
            </FlexLayout>

            <VerticalStackLayout Spacing="10">
                <Label Style="{StaticResource SubHeader}" Text="Directions" />
                <Border
                    Padding="10"
                    BackgroundColor="{DynamicResource SecondaryColor}"
                    HeightRequest="80"
                    StrokeShape="RoundRectangle 20"
                    StrokeThickness="0">
                    <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                        <Label Style="{StaticResource SubHeader}" Text="1" />
                        <Label Text="Chop eggs" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Border>
                <Border
                    Padding="10"
                    BackgroundColor="{DynamicResource SecondaryColor}"
                    HeightRequest="80"
                    StrokeShape="RoundRectangle 20"
                    StrokeThickness="0">
                    <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                        <Label Style="{StaticResource SubHeader}" Text="1" />
                        <Label Text="Chop eggs" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Border>
                <Border
                    Padding="10"
                    BackgroundColor="{DynamicResource SecondaryColor}"
                    HeightRequest="80"
                    StrokeShape="RoundRectangle 20"
                    StrokeThickness="0">
                    <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                        <Label Style="{StaticResource SubHeader}" Text="1" />
                        <Label Text="Chop eggs" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Border>
                <Border
                    Padding="10"
                    BackgroundColor="{DynamicResource SecondaryColor}"
                    HeightRequest="80"
                    StrokeShape="RoundRectangle 20"
                    StrokeThickness="0">
                    <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                        <Label Style="{StaticResource SubHeader}" Text="1" />
                        <Label Text="Chop eggs" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!--  //comments  -->
            <Border
                Padding="10"
                BackgroundColor="{DynamicResource SecondaryColor}"
                HeightRequest="80"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0">
                <FlexLayout JustifyContent="SpaceBetween" VerticalOptions="Center">
                    <Entry Placeholder="Discuss here" VerticalOptions="Center" />
                    <ImageButton Source="/TabBarIcons/profile.png" />
                </FlexLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>