<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlavorHub.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Shell.TitleView>
        <Border>
            <Grid>
                <FlexLayout AlignItems="Center" JustifyContent="SpaceBetween">
                    <Border
                        Margin="0,0,10,0"
                        HeightRequest="50"
                        StrokeShape="RoundRectangle 50,50,50,50"
                        WidthRequest="50">
                        <Image Aspect="AspectFill" Source="Resources/Images/TabBarIcons/profile.png" />
                    </Border>
                    <Label
                        FontSize="Medium"
                        Text="hello"
                        VerticalOptions="Center" />
                </FlexLayout>
            </Grid>
        </Border>
    </Shell.TitleView>
    <ScrollView Padding="30">
        <Grid RowDefinitions=".4*,.4*,*,*" RowSpacing="10">
            <!--  for sub heading  -->
            <Border Grid.Row="0">
                <Label Style="{StaticResource SubHeader}" Text="What do you want to cook today?" />
            </Border>
            <!--  for filters  -->
            <Border Grid.Row="1">
                <ScrollView Orientation="Horizontal" VerticalOptions="Center">
                    <HorizontalStackLayout Spacing="10">
                        <Border
                            BackgroundColor="{DynamicResource SecondaryColor}"
                            HeightRequest="60"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="0"
                            WidthRequest="120">
                            <Label
                                HorizontalOptions="Center"
                                Text="Categories"
                                VerticalOptions="Center" />
                        </Border>
                        <Border
                            BackgroundColor="{DynamicResource SecondaryColor}"
                            HeightRequest="60"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="0"
                            WidthRequest="120">
                            <Label
                                HorizontalOptions="Center"
                                Text="Categories"
                                VerticalOptions="Center" />
                        </Border>
                        <Border
                            BackgroundColor="{DynamicResource SecondaryColor}"
                            HeightRequest="60"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="0"
                            WidthRequest="120">
                            <Label
                                HorizontalOptions="Center"
                                Text="Categories"
                                VerticalOptions="Center" />
                        </Border>
                        <Border
                            BackgroundColor="{DynamicResource SecondaryColor}"
                            HeightRequest="60"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="0"
                            WidthRequest="120">
                            <Label
                                HorizontalOptions="Center"
                                Text="Categories"
                                VerticalOptions="Center" />
                        </Border>
                    </HorizontalStackLayout>
                </ScrollView>
            </Border>
            <Border
                Grid.Row="2"
                HeightRequest="250"
                StrokeShape="RoundRectangle 20">
                <AbsoluteLayout>
                    <Image
                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                        AbsoluteLayout.LayoutFlags="All"
                        Aspect="AspectFill"
                        Source="/HomePage/food.png" />
                    <RoundRectangle
                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                        AbsoluteLayout.LayoutFlags="All"
                        CornerRadius="20"
                        Opacity=".7">
                        <RoundRectangle.Fill>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Offset="0" Color="Transparent" />
                                <GradientStop Offset="1" Color="#030005" />
                            </LinearGradientBrush>
                        </RoundRectangle.Fill>
                    </RoundRectangle>
                    <Grid
                        Padding="20"
                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                        AbsoluteLayout.LayoutFlags="All"
                        ColumnDefinitions="*"
                        RowDefinitions=".1*,*, .4*">
                        <FlexLayout Grid.Row="0" JustifyContent="SpaceBetween">
                            <Border
                                BackgroundColor="#807A5242"
                                HeightRequest="40"
                                Opacity="100"
                                StrokeShape="RoundRectangle 30"
                                StrokeThickness="0">
                                <HorizontalStackLayout
                                    Padding="5,3,5,3"
                                    Spacing="3"
                                    VerticalOptions="Center">
                                    <Border StrokeShape="RoundRectangle 30">
                                        <Image Source="/TabBarIcons/Profile.png" />
                                    </Border>
                                    <Label Text="Prekshya" TextColor="{StaticResource White}" />
                                </HorizontalStackLayout>
                            </Border>
                            <HorizontalStackLayout>
                                <Border
                                    Padding="10"
                                    BackgroundColor="#807A5242"
                                    HeightRequest="40"
                                    Opacity="100"
                                    StrokeShape="RoundRectangle 30"
                                    StrokeThickness="0"
                                    WidthRequest="40">
                                    <Image Aspect="AspectFill" Source="/Homepage/heart.png" />
                                </Border>
                            </HorizontalStackLayout>
                        </FlexLayout>

                        <!--  for the cooking details  -->
                        <VerticalStackLayout Grid.Row="2" Spacing="8">
                            <HorizontalStackLayout Spacing="10">
                                <HorizontalStackLayout Spacing="10">
                                    <Image Source="/HomePage/clock.png" />
                                    <Label
                                        FontSize="Micro"
                                        Text="12 min"
                                        TextColor="white" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="10">
                                    <Image Source="/HomePage/level.png" />
                                    <Label
                                        FontSize="Micro"
                                        Text="Easy"
                                        TextColor="white" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="10">
                                    <Image Source="/HomePage/ingredients.png" />
                                    <Label
                                        FontSize="Micro"
                                        Text="Ingredients"
                                        TextColor="white" />
                                </HorizontalStackLayout>
                            </HorizontalStackLayout>
                            <Label
                                Style="{DynamicResource SubHeader}"
                                Text="White Bread Naan"
                                TextColor="{StaticResource SecondaryColor}" />
                        </VerticalStackLayout>


                        <!--  for full screen  -->
                        <Border
                            Grid.Row="2"
                            Padding="10"
                            BackgroundColor="#807A5242"
                            HeightRequest="40"
                            HorizontalOptions="End"
                            Opacity="100"
                            StrokeShape="RoundRectangle 30"
                            StrokeThickness="0"
                            WidthRequest="40">
                            <Image Aspect="AspectFit" Source="/HomePage/fullscreen.png" />
                        </Border>
                    </Grid>
                </AbsoluteLayout>
            </Border>
            <Border Grid.Row="3" Padding="10">
                <FlexLayout JustifyContent="SpaceBetween">
                    <Label Style="{DynamicResource SubHeader}" Text="Popular Recipes" />
                    <Label Text="view all" />
                </FlexLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>
